# Application
APP_NAME=Echo
ENVIRONMENT=production
DEBUG=False
LOG_LEVEL=INFO

# API
API_V1_PREFIX=/api/v1
HOST=0.0.0.0
PORT=8000

# Database (Railway will provide this)
DATABASE_URL=postgresql+asyncpg://user:password@host:port/database

# Redis (Railway will provide this)
REDIS_URL=redis://host:port/0
REDIS_PASSWORD=

# LLM API Keys
DEEPSEEK_API_KEY=your_deepseek_key_here
OPENAI_API_KEY=your_openai_key_here

# Security
SECRET_KEY=generate-a-random-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Authentication
API_KEY=your-api-key-here
REQUIRE_AUTH=false  # Set to true in production

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST_SIZE=20

# Notifications (Optional)
SLACK_WEBHOOK_URL=

# CORS (add your frontend URL in production)
CORS_ORIGINS=https://your-frontend-url.com

# Database Connection
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# S3 Data Lake Configuration
S3_BUCKET_NAME=your-echo-data-lake-bucket
S3_RAW_PREFIX=raw/
S3_STAGING_PREFIX=staging/
S3_ARCHIVE_PREFIX=archive/

# Redshift Configuration (Optional - for enterprise deployments)
REDSHIFT_HOST=your-cluster.region.redshift.amazonaws.com
REDSHIFT_PORT=5439
REDSHIFT_USER=admin
REDSHIFT_PASSWORD=your_redshift_password
REDSHIFT_DATABASE=echo_analytics
REDSHIFT_SCHEMA=public
USE_REDSHIFT=false  # Set to true to use Redshift instead of PostgreSQL
